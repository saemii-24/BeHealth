{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    // 기본 값은 commonjs 지만 import를 쓸것이므로 ESNext로 작성
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "strict": true //엄격하게 검사
  },
  "include": ["src/**/*.ts", "api/**/*.ts"],
  "exclude": [
    //ts 포함하지 않을 내용들
    "node_modules",
    "dist"
  ]
}
